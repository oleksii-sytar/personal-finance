{
  "name": "personal-finance",
  "version": "1.1.3",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit --project tsconfig.build.json",
    "test": "vitest",
    "test:basic": "vitest run tests/unit/utils/format.test.ts src/__tests__/middleware.test.ts --reporter=verbose --no-watch",
    "test:integration": "vitest run tests/integration/ --reporter=verbose --no-watch",
    "test:connection": "vitest run tests/integration/connection.test.ts --reporter=verbose --no-watch",
    "test:unit": "vitest run tests/unit/ src/**/*.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:coverage": "vitest run --coverage",
    "test:autonomous": "vitest run --reporter=verbose --no-watch",
    "test:e2e:autonomous": "AUTONOMOUS_MODE=true playwright test --project=chromium",
    "db:types": "supabase gen types typescript --linked --output src/types/database.ts 2>/dev/null || echo 'Type generation failed, using existing types'",
    "db:push": "node scripts/apply-migration-direct.mjs",
    "db:migrate": "./scripts/open-sql-editor.sh",
    "db:cleanup": "node scripts/force-cleanup-test-users.mjs",
    "deploy": "./scripts/deploy-autonomous.sh",
    "deploy:check": "npm run type-check && npm run lint && npm run build",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-tabs": "^1.1.13",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.38.5",
    "@tanstack/react-query": "^5.0.0",
    "@types/lodash": "^4.17.21",
    "@types/react-window": "^1.8.8",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.303.0",
    "next": "^15.5.9",
    "react": "^18",
    "react-day-picker": "^9.13.0",
    "react-dom": "^18",
    "react-window": "^2.2.4",
    "tailwind-merge": "^2.2.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.0.1",
    "dotenv": "^17.2.3",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "fast-check": "^4.5.2",
    "jsdom": "^27.4.0",
    "msw": "^2.0.0",
    "pg": "^8.18.0",
    "postcss": "^8",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "vitest": "^1.0.0"
  }
}
