{
  "name": "personal-finance",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:basic": "vitest run tests/unit/utils/format.test.ts src/__tests__/middleware.test.ts --reporter=verbose --no-watch",
    "test:integration": "vitest run tests/integration/ --reporter=verbose --no-watch",
    "test:connection": "vitest run tests/integration/connection.test.ts --reporter=verbose --no-watch",
    "test:unit": "vitest run --include '**/unit/**' --include '**/*.test.ts' --exclude '**/*.property.test.*' --exclude '**/e2e/**'",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:auth": "playwright test tests/e2e/auth.spec.ts",
    "test:e2e:workspace": "playwright test tests/e2e/workspace.spec.ts",
    "test:e2e:journey": "playwright test tests/e2e/user-journey.spec.ts",
    "test:e2e:comprehensive": "playwright test tests/e2e/comprehensive-flow.spec.ts",
    "test:e2e:report": "playwright show-report",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:autonomous": "vitest run --reporter=verbose --no-watch",
    "test:e2e:autonomous": "AUTONOMOUS_MODE=true playwright test --project=chromium",
    "db:types": "supabase gen types typescript --linked --output src/types/database.ts 2>/dev/null || echo 'Type generation failed, using existing types'",
    "db:push": "printf 'y\\n' | perl -e 'alarm(60); exec @ARGV' supabase db push || echo 'Migration timed out or no changes'",
    "db:push:autonomous": "printf 'y\\n' | perl -e 'alarm(60); exec @ARGV' supabase db push || echo 'No migrations to apply'",
    "db:status": "perl -e 'alarm(15); exec @ARGV' supabase status || echo 'Supabase connection failed'",
    "deploy": "./scripts/deploy-autonomous.sh",
    "deploy:check": "npm run type-check && npm run lint && npm run build",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.38.5",
    "@tanstack/react-query": "^5.0.0",
    "@vercel/speed-insights": "^1.3.1",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "lucide-react": "^0.303.0",
    "next": "^15.5.9",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.2.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.0.1",
    "dotenv": "^17.2.3",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "fast-check": "^4.5.2",
    "jsdom": "^27.4.0",
    "msw": "^2.0.0",
    "postcss": "^8",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "vitest": "^1.0.0"
  }
}
